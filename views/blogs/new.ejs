<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align: center;">Create a New Blog</h1>
      <div class="form-box">
        <form action="/blogs" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="blog[title]" placeholder="Title">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="blog[image]" placeholder="Image URL">
          </div>
          <div class="form-group">
            <textarea class="form-control" type="text" name="blog[mainContent]" placeholder="What's on your mind?"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>

          <a href="/blogs">Go Back Home</a>
        </form>
      </div>
    </div>
  </div>
<% include ../partials/footer %>