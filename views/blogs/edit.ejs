<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align: center;">Edit <%= blog.title %></h1>
      <div class="form-box">
        <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="blog[title]" placeholder="<%= blog.title %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="blog[image]" placeholder="<%= blog.image %>">
          </div>
          <div class="form-group">
            <textarea class="form-control" type="text" name="blog[mainContent]" placeholder="<%= blog.mainContent %>"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>

          <a href="/blogs">Go Back</a>
        </form>
      </div>
    </div>
  </div>
<% include ../partials/footer %>